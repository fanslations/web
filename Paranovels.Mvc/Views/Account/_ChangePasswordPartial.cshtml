@using Microsoft.AspNet.Identity
@model Paranovels.Mvc.Models.ManageUserViewModel


@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        <label>
            <input type="text" name="OldPassword" placeholder="Old Password" class="input-sm form-control" required />
        </label>
    </div>
    <div class="form-group">
        <label>
            <input type="password" name="NewPassword" placeholder="New Password" class="input-sm form-control" required />
        </label>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Change Password</button>
    </div>
}
