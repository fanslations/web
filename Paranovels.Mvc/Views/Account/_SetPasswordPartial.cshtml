@model Paranovels.Mvc.Models.ManageUserViewModel

<p class="text-info">
    You do not have a local username/password for this site. Add a local
    account so you can log in without an external login.
</p>

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <label>
        <input type="password" name="NewPassword" placeholder="Password" class="input-sm form-control" required />
    </label>
    <div>
        <button type="submit" class="btn btn-primary">Set Password</button>
    </div>
}
