@using Paranovels.Common
@using Thi.Core
@model Paranovels.ViewModels.GroupForm
@{
    ViewBag.Title = "Add new translations group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="header">
        <a href="@Url.Action("Index")" class="action left"><i class="fa fa-chevron-circle-left"></i></a>
        <h1 class="title">
            @ViewBag.Title
        </h1>
    </div>
    <div class="content">
        <form class="" method="POST" action="@Url.Action("Form")" enctype="multipart/form-data" data-form-ajax='{}'>
            <div class="form-group">
                <label id="label-name" for="name">Enter group name</label>
                <input id="name" name="@Model.PropertyName(m=>m.Name)" type="text" class="form-control" placeholder="Enter group name" aria-labelledby="label-name" required />
            </div>
            <div class="form-group">
                <label id="label-url" for="url">Enter group website url</label>
                <input id="url" name="@Model.PropertyName(m=>m.Url)" type="url" class="form-control" placeholder="Enter group website url" aria-labelledby="label-url" required />
            </div>
            <div class="form-group clearfix">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus-circle"></i>Add Group</button>
                <button type="button" class="btn btn-default" onclick="history.go(-1)"><i class="fa fa-times-circle"></i>Cancel</button>
            </div>
        </form>
    </div>
</section>

