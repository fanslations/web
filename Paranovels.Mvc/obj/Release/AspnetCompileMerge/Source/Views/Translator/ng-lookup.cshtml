@using Paranovels.DataModels
@using Thi.Core
@model Paranovels.ViewModels.NovelForm

@{
    Layout = null;

    var glossary = new Glossary();
}

<div class="lookup">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#addglossary" aria-controls="messages" role="tab" data-toggle="tab">Add to Glossary</a></li>
        <li role="presentation"><a href="#dictionary" aria-controls="settings" role="tab" data-toggle="tab">Dictionary</a></li>
        <li role="presentation"><a href="#examples" aria-controls="profile" role="tab" data-toggle="tab">Examples</a></li>
        <li role="presentation"><a href="#allglossaries" aria-controls="home" role="tab" data-toggle="tab">All Glossaries</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="addglossary">
            <section class="section">
                <div class="header">
                    <h1 class="title">
                        Add to glossary {{glossary.raw}}
                    </h1>
                </div>
                <div class="content">
                    <form class="" method="POST" action="@Url.Action("Form","Glossary")">
                        <div class="form-group">
                            <label id="label-raw" for="raw" class="arrow_box">Enter raw text</label>
                            <input id="raw" name="@(Model.PropertyName(m=>m.Glossaries))[0].@glossary.PropertyName(m => m.Raw)" type="text" ng-model="glossary.raw" class="form-control" placeholder="Enter raw text" aria-labelledby="label-raw" required />
                        </div>
                        <div class="form-group">
                            <label id="label-final" for="final" class="arrow_box">Enter text</label>
                            <input id="final" name="@(Model.PropertyName(m=>m.Glossaries))[0].@glossary.PropertyName(m => m.Raw)" type="text" ng-model="glossary.final" class="form-control" placeholder="Enter translated text" aria-labelledby="label-final" required />
                        </div>
                        <div class="form-group">
                            <label id="label-definition" for="definition" class="arrow_box">Enter Definition</label>
                            <textarea id="definition" name="@(Model.PropertyName(m=>m.Glossaries))[0].@glossary.PropertyName(m => m.Definition)" ng-model="glossary.definition" class="form-control" placeholder="Enter definition" aria-labelledby="label-definition" required></textarea>
                        </div>
                        <div class="hidden">
                            <input type="hidden" name="@Model.PropertyName(m=>m.ID)" value="{{glossary.novelId}}" />
                            <input type="hidden" name="@Model.PropertyName(m=>m.InlineEditProperty)" value="@Model.PropertyName(m=>m.Glossaries)" />
                        </div>
                        <div class="form-group clearfix">
                            <button type="button" class="btn btn-primary col-xs-7" ng-click="add()"><i class="fa fa-plus-circle"></i>Add Glossary</button>
                            <button type="button" class="btn btn-default col-xs-4 col-xs-offset-1" ng-click="close()"><i class="fa fa-times-circle"></i>Cancel</button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
        <div role="tabpanel" class="tab-pane" id="dictionary"></div>
        <div role="tabpanel" class="tab-pane" id="examples">...</div>
        <div role="tabpanel" class="tab-pane" id="allglossaries">...</div>
    </div>
    <a href="" ng-click='close()' class="position-absolute top-0px right-0px cursor-pointer padding-5px" role="button"><i class="fa fa-times-circle"></i><span class="sr-only">Close</span></a>
</div>
