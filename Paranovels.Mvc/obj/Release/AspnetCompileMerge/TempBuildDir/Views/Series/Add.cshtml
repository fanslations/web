@using Paranovels.Common
@using Thi.Core
@model Paranovels.ViewModels.SeriesForm
@{
    ViewBag.Title = "Add new novel to tracker";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section">
    <div class="header">
        <a href="@Url.Action("Index")" class="action left"><i class="fa fa-chevron-circle-left"></i></a>
        <h1 class="title">
            @ViewBag.Title
        </h1>
    </div>
    <div class="content">
        <form class="" method="POST" action="@Url.Action("Form")" data-form-ajax='{}'>
            <div class="form-group">
                <label id="label-title" for="title" class="arrow_box">Enter title of novel</label>
                <input id="title" name="title" type="text" class="form-control" placeholder="Enter title" aria-labelledby="label-title" required />
            </div>
            <div class="form-group">
                <label id="label-synopsis" for="synopsis" class="arrow_box">Enter synopsis</label>
                <textarea id="synopsis" name="@Model.PropertyName(m=>m.Synopsis)" class="form-control" placeholder="Enter synopsis" aria-labelledby="label-synopsis" required></textarea>
            </div>
            <div class="form-group clearfix">
                <button type="submit" class="btn btn-primary col-xs-7"><i class="fa fa-plus-circle"></i>Add Novel</button>
                <button type="button" class="btn btn-default col-xs-4 col-xs-offset-1" onclick="history.go(-1)"><i class="fa fa-times-circle"></i>Cancel</button>
            </div>
        </form>
    </div>
</section>

