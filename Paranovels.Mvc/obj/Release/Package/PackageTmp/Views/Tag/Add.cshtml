@using Paranovels.Common
@model Paranovels.ViewModels.TagForm
@{
    ViewBag.Title = "Add new " + Model.TagType.Translate(R.TagType.Translate).ToLower();
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="position-relative">
    <div class="section-header">
        <a href="@Url.Action("Index")" class="action-left"><i class="fa fa-chevron-circle-left"></i></a>
        <h1 class="section-title">
            @ViewBag.Title
        </h1>
    </div>
    <div class="container-fluid section-content">
        <form action="@Url.Action("Form")" method="POST" data-form-ajax='{}'>
            <div class="form-group">
                <label id="label-name" for="name" class="arrow_box">Enter genre name</label>
                <input id="name" name="Name" type="text" class="form-control" placeholder="Enter genre name" aria-labelledby="label-name" required />
            </div>
            <div class="form-group">
                <label id="label-description" for="description" class="arrow_box">Enter description for the genre</label>
                <textarea id="description" name="Description" class="form-control" rows="3" ng-model="vm.chapter.content" placeholder="Enter description for the genre" aria-labelledby="label-description" required></textarea>
            </div>
            <div class="hidden">
                <input type="hidden" name="TagType" value="@R.TagType.NOVEL_GENRE" />
            </div>
            <div class="form-group clearfix">
                <button type="submit" class="btn btn-primary col-xs-7"><i class="fa fa-plus-circle"></i>Add @Model.TagType.Translate(R.TagType.Translate)</button>
                <button type="button" class="btn btn-default col-xs-4 col-xs-offset-1" onclick="history.go(-1)"><i class="fa fa-times-circle"></i>Cancel</button>
            </div>
        </form>
    </div>
</div>
